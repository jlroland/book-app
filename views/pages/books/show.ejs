<!DOCTYPE html>
<html>
  <head>
    <title>Book Details</title>
    <%- include ../../layout/head %>
  </head>
  <body>
    <%- include ../../layout/header %>
    <div id="single-container">
      <div id="single-book">
        <img src= "<%= selectedBook.image_url %>"/>
        <h3><%= selectedBook.title %></h3>
        <p class="author"><%= selectedBook.author %></p>
        <p class="description"><%= selectedBook.description %></p>
        <p>ISBN: <%= selectedBook.isbn %></p>
        <p>Bookshelf: <%= selectedBook.bookshelf %></p>
        <button class="form-display details-button">Update</button>

        <form class="hidden" action="/books/<%=selectedBook.id%>" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="text" name="isbn" value="<%= selectedBook.isbn %>" required>
          <input type="text" name="title" value="<%= selectedBook.title %>" required>
          <input type="text" name="author" value="<%= selectedBook.author %>" required>
          <input type="text" name="description" value="<%= selectedBook.description %>" required>
          <input type="text" name="bookshelf" value="<%=selectedBook.bookshelf %>" required>
          <button class="details-button" type="submit"> Update Book</button>
        </form>
        <form action="/books/<%=selectedBook.id%>" method="post">
          <input type="hidden" name="_method" value="delete"/>
          <button class="details-button" type="submit">Delete Book</button>
        </form>
      </div>
    </div>  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="./../js/app.js"></script>
  </body>
</html>